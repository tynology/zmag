<h1><%= @magazine.title %> Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Printdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.printdate %></td>
        <td><%= link_to 'Show', magazine_issue_articles_path(issue.magazine, issue) %></td>
        <td><%= link_to 'Edit', edit_magazine_issue_path(issue.magazine, issue) %></td>
        <td><%= link_to 'Destroy', [issue.magazine, issue] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_magazine_issue_path %>
